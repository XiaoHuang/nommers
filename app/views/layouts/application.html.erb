<!DOCTYPE html>
<html>
<head>
	  <title>Nearest Food Trucks</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
		<%= content_for :head %>
	</head>
	<body>
		<div id="content">
			<div id="user_info">
				<% if current_user %>
					Logged in as <span class="username"><%= current_user.email %></span> | <%= link_to "Log Out", logout_path %>
				<% else %>
					<%= link_to "Sign Up", signup_path %> or 
					<%= link_to "Log In", login_path %>
				<% end %>
			</div>
			<header style='text-align: center;'>
				<img src='/assets/foodtrucks.png' />
			</header>
			<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, id: "flash_#{name}" %>
			<% end %>
			<%= yield %>
		</div>
	</body>
</html>